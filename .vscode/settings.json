{
    // "python.pythonPath": "C:\\Users\\yukiw\\AppData\\Local\\Programs\\Python\\Python39\\python.exe",
    "python.pythonPath": "venvs\\gym\\.venv\\Scripts\\python.exe",
    // "python.pythonPath": "venvs\\torch_cpu\\.venv\\Scripts\\python.exe",
    // "python.pythonPath": "venvs\\torch_gpu\\.venv\\Scripts\\python.exe",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.flake8Args": [
        "--max-complexity=20",
        "--max-line-length=160",
    ],
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--aggressive",
        "--aggressive",
    ],
    "files.associations": {
        "iostream": "cpp",
        "core": "cpp",
        "superlusupport": "cpp",
        "*.evaluator": "cpp",
        "*.traits": "cpp",
        "adolcforward": "cpp",
        "alignedvector3": "cpp",
        "autodiff": "cpp",
        "bvh": "cpp",
        "eulerangles": "cpp",
        "fft": "cpp",
        "kroneckerproduct": "cpp",
        "mprealsupport": "cpp",
        "numericaldiff": "cpp",
        "openglsupport": "cpp",
        "specialfunctions": "cpp",
        "splines": "cpp"
    },
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        // markdownは 行末の半角スペース2つで改行なので、消さないようにする
        "files.trimTrailingWhitespace": false,
        //  スペースは ・ で表示される
        "editor.renderWhitespace": "boundary"
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.fontFamily": "'Migu 1M', Menlo, Monaco, 'Courier New', monospace",
    "editor.renderControlCharacters": false,
    "editor.wordWrap": "on",
}
